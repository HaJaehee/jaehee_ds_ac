extends layout

block mainContent
	h2 Adding accessible group
	
	p
		a(href='/', class="button small pink") &laquo;  Back to index
	
	if error
		p.error Something went terribly bad: #{error}
	
	form(method='post')
		div(class='listRow')
			label group to add:
				select(name='groupname', required)
					option(value='')
					if(othersgroup)
						for othergroup in othersgroup
							option(value='#{othergroup}') #{othergroup}
	
		div.formFooter
			input(type='submit', value='Add')
