extends layout

block mainContent
	h2 Adding EPCIS
	
	p
		a(href='/index', class="button small pink") &laquo;  Back to index
	
	if error
		p.error Something went terribly bad: #{error}
	
	form(method='post')
		div(class='listRow')
			label EPCIS Name to add:
				input(name='epcisname', value='#{epcisname}')
				label EPCIS URL:
				input(name='epcisurl', value='127.0.0.1:8080')
	
		div.formFooter
			input(type='submit', value='Add')
