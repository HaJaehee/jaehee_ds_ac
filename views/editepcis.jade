extends layout

block mainContent
	h2 Editing EPCIS URL
	
	p
		a(href='/index', class="button small pink") &laquo;  Back to index
	
	if error
		p.error Something went terribly bad: #{error}
	
	form(method='post')
		div(class='listRow')
			Edit #{epcisname} EPCIS URL:
				input(name='epcisurl', value='#{epcisurl}')
	
		div.formFooter
			input(type='submit', value='Set URL')
